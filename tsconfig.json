{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "ESNext",
        "target": "es2016",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "vite/client",
            "vite-plugin-pages/client",
            "@types/node",
            "@types/uuid"
        ],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "vueCompilerOptions": {
        "experimentalDisableTemplateSupport": true
    },
    "exclude": ["dist", "node_modules", ".vscode", "public"]
}
